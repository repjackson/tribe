

template(name='needs')
    .ui.hidden.divider
    if currentUser
        .ui.label
            i.user.icon
            |#{currentUser.username}
        #add_need.ui.icon.button
            i.large.plus.icon
        a#logout.ui.icon.button(href='#') 
            i.large.sign.out.icon
    else
        a.ui.item(href='/sign-in') 
            i.large.sign.in.icon
    .ui.icon.input
        input#quick_add(type='text' placeholder='quick add')
        i.yellow.lightning.icon
    h2.ui.center.aligned.header i need...
    +tag_cloud
    +username_cloud
    .ui.stackable.centered.cards
        each needs
            +need_card

template(name='need_card')
    .ui.card
        .content
            each tags
                .ui.button.need_tag(class=need_tag_class) #{this}
            .div
                | by #{author.username} #{when}
            if can_edit
                a.ui.icon.button(href="/edit_need/#{_id}")
                    i.pencil.icon.icon