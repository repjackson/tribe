

template(name='needs')
    .ui.container.basic.segment
        .ui.grid
            .two.wide.column
                #add_need.ui.icon.button
                    i.large.plus.icon
            .fourteen.wide.column
                h3.ui.center.aligned.header i need...
                +cloud
                .ui.stackable.cards
                    each needs
                        +need_card

template(name='need_card')
    .ui.card
        .content
            .meta
                each tags
                    .ui.button.need_tag(class=need_tag_class) #{this}
        .content
            | by #{author.username} #{when}
        .content
            a.ui.icon.button(href="/view_need/#{_id}") 
                i.right.arrow.icon
            if can_edit
                a.ui.icon.button(href="/edit_need/#{_id}")
                    i.pencil.icon.icon